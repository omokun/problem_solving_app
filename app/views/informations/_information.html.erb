<%= form_with model: Information.new, url: main_issue_sub_issue_informations_path(main_issue_id: sub_issue.main_issue_id, sub_issue_id: sub_issue.id), class: 'form' do |f| %>
  <div class="form-input">
    <%= f.text_area :content, class: 'form-subissue-tree', placeholder: 'イシューや枠組みの問いを意識して仮説を考える　『・・・だろう』' %>
  </div>
  <%= f.submit '登録する', id: "submit3", class: 'shiny-btn2' %>
<% end %>

<div id="informations-<%= sub_issue.id %>">
  <% sub_issue.informations.each do |information| %>
    <div class="content3">
      <%= information.content %>
    </div>
  <% end %>
</div>